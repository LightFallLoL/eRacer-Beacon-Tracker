<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/blue_white_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:backgroundTint="@color/blau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:title="Checkpoint"/>

    <Button
        android:id="@+id/btnEscaner"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/blau"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:text="ESCANEJAR"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvBeaconLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="39dp"
        android:background="#E0E0E0"
        android:padding="8dp"
        android:text="Beacon Log"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnEscaner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/white"
        android:textColor="@color/blau"
        android:layout_marginStart="116dp"

        android:layout_marginTop="60dp"
        android:layout_marginEnd="122dp"
        android:text="ACCEPTAR">

    </Button>

</RelativeLayout>
